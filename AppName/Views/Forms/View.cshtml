@model Form

@{
    ViewData["Title"] = "View Form";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h2>View Form</h2>
<br />
<div class="row">
    <div class="col-lg-7">
        <div class="bs-component">
            <form>
                <!-- Name, title, and assessment period fields -->
                <fieldset>
                    <div class="form-group row">
                        <label asp-for="EmployeeID" class="col-sm-4 col-form-label">Employee ID:</label>

                        <div class="col-sm-8">
                            @*<input asp-for="Employee" type="text" list="employees" class="form-control" placeholder="Enter Employee ID" />*@
                            @Html.DisplayFor(model => model.EmployeeID, new { htmlAttributes = new { @class = "form-control", @type = "text", @id = "employeeEntry", @placeholder = "Enter Employee ID" } })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="CreatedByID" class="col-sm-4 col-form-label">Created By ID:</label>
                        <div class="col-sm-8">
                            @*<input asp-for="CreatedBy" type="text" list="supervisors" class="form-control" placeholder="Enter Supervisor ID" value=1 readonly />*@
                            @Html.DisplayFor(model => model.CreatedByID, new { htmlAttributes = new { @class = "form-control", @type = "text", @value = Model.CreatedByID } })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Title" class="col-sm-4 col-form-label">Title:</label>
                        <div class="col-sm-8">
                            @*<input asp-for="Title" type="text" class="form-control" placeholder="Enter Title" />*@
                            @Html.DisplayFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Enter Title" } })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Period" class="col-sm-4 col-form-label">Assessment Period:</label>
                        <div class="col-sm-8">
                            @*<input asp-for="Period" type="text" class="form-control" placeholder="Enter Assessment Period" />*@
                            @Html.DisplayFor(model => model.Period, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Enter Assessment Period" } })
                        </div>
                    </div>
                </fieldset>
                <hr />
                <!-- Section 1: KPI metrics, actions, and results fields-->
                <fieldset>
                    <legend class="text-muted">Section I: Key Performance Indicators</legend>
                    <br />
                    <h5>Quality/Safety</h5>
