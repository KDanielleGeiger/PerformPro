@section scripts {
    <script>
        var employeeEntry = document.getElementById("employeeEntry");
        if (employeeEntry.value == "0") {
            employeeEntry.value = "";
        }
    </script>

    <style type="text/css">
        .likert-container {
            position: relative;
            width: 550px;
        }

        .likert {
            position: relative;
            padding-top: 3px;
            margin-left: 30px;
            margin-right: 30px;
            z-index: 1;
        }

        .likert-options {
            -webkit-appearance: none;
            -moz-appearance: none;
            display: inline-block;
            width: 16px;
            height: 16px;
            padding: 6px;
            cursor: pointer;
            background-clip: content-box;
            background-color: #e7e6e7;
            border-radius: 50%;
            margin-left: 30px;
            margin-right: 30px;
        }

        .likert-options-first {
            margin-left: 0px;
        }

        .likert-options-last {
            margin-right: 0px;
        }

        .likert-options:focus {
            outline: none;
        }

        .likert-options:checked {
            background-color: #0098c9;
        }

        .likert-text {
            margin-bottom: 0px;
        }

        .background {
            position: absolute;
            background: #e7e6e7;
            height: 2px;
            margin-top: 10px;
            margin-left: 80px;
            width: 320px;
            z-index: -1;
        }

        .kpi-metric {
            margin-bottom: 4px;
        }
    </style>
}