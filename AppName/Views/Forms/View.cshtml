                        <label asp-for="Quality" class="col-sm-4 col-form-label">Metric:</label>
                        <div class="col-sm-8">
                            <input asp-for="Quality" type="text" class="form-control" readonly placeholder="Enter Metric" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="QualityAr" class="col-sm-4 col-form-label">Actions and Results:</label>
                        <div class="col-sm-8">
                            <input asp-for="QualityAr" type="text" class="form-control" readonly placeholder="Enter Actions and Results" />
                        </div>
                    </div>
                    <br />
                    <h5>Service</h5>
