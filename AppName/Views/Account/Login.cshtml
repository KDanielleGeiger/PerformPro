@model LoginModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>
<br />
<div class="row">
    <div class="col-lg-5">
        <div class="bs-component">
            <form autocomplete="off" asp-controller="Account" asp-action="Login" method="post">
                @Html.ValidationSummary(true, string.Empty, new { @class = "text-danger" })
                <fieldset>
                    <div class="form-group row">
                        <label asp-for="Email" class="col-sm-4 col-form-label">Email:</label>
                        <div class="col-sm-8">
                            @*<input asp-for="Email" type="text" class="form-control" placeholder="Enter Email" />*@
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Enter Email" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Password" class="col-sm-4 col-form-label">Password:</label>
                        <div class="col-sm-8">
                            @*<input asp-for="Password" type="password" class="form-control" placeholder="Enter Password" />*@
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @type = "password", @placeholder = "Enter Password" } })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-primary">Login</button>
                </fieldset>
            </form>
        </div>
    </div>
</div>